@import "../../common/styl/variable.styl"
@import "../../common/styl/mixin.styl"
#select-car
  // position:fixed
  // left:0
  // right:0
  // top:0
  // bottom:0
  background:$color-background-dd
  text-align:left
  .select-car-title
    line-height:80px
    height:80px
    font-size:26px
    padding-left:28px
    color:$color-text
    position:fixed
    z-index:1
    left:0
    top:0
    background:$color-background-dd
    width: 100%
.h80
  height:80px
.form-box
  background:#fff
  border-1px(#dddddd)
  border-top-1px(#dddddd)
  overflow: scroll
  z-index:0
  .car-list
    height:140px
    border-1px(#dddddd)
    margin-left:14px
    position:relative
    display:flex
    color:$color-text
    .car-img
      width:136px
      height:136px
      margin-right:40px
      overflow:hidden
      padding:1PX 0
      .img
        width:100%
        height:100%
    .car-number
      height:140px
      line-height:140px
    &:after
        display: block
        position: absolute
        left: 0
        bottom: 0
        border-top: 1PX solid #ddd
        content: " "
        width: 100%;
.car-list .icon-more
  position:absolute
  right: 40px
  top:38px
  width:40px
  height:40px
  font-size:44px
  color:#666
.tips-status-box
  position:absolute
  left: 0
  top:0
  width: 100%
  height:100%
  background:#fff
  z-index: 2
  // display:none
  .ptc
    margin-top:30%
    position:relative
.loading-box
  position:absolute
  left: 0
  top:0
  width: 100%
  height:100%
  background:#fff
  z-index: 2
  .loading 
    margin-top: 20%
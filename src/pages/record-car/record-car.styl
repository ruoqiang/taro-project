@import "../../common/styl/variable"
@import "../../common/styl/mixin"
$color-background = #fff
$color-text-l = #999
#record-car
  position:fixed
  left:0
  right:0
  top:0
  bottom:0
  background:$color-background-dd
  text-align:left
  .record-img
    height:0px
    // font-size:0px
    padding-bottom:87.9%
    background:url('http://wechat.chepass.com:8021/Content/dist/static/img/record01.6bfdc7c.jpg') no-repeat
    background-size:100%
    position:relative
    overflow:hidden
    @media only screen and (min-width: 360px)
      padding-bottom:79.9%
    @media only screen and (min-width: 410px)
      padding-bottom:75.9%
    .record-time-span
      width:94.2%
      height:330px
      position:absolute
      left:50%
      bottom:0
      background:#fff
      border:1Px solid #dddddd
      transform: translate3d(-50%,0,0);
      border-radius:10px 10px 0 0
      .span-title
        line-height:84px
        height:84px
        padding-left:30px
        color:$color-text
        font-size:26px
      .time-span
        width:612px
        margin:0 auto
        line-height:84px
        height:84px
        display:flex
        justify-content: space-evenly;
        .span
          width:80px
          font-size:26px
          color:$color-text
          text-align:center
          display:inline-block
          &.time
            font-size:30px
            width:250px
            border-1px(#dddddd)
      .btn
        margin-top:50px

.icon-top
  position:fixed
  right: 20px
  bottom:20px
  width:40px
  height:40px
  font-size:28px
  color:$color-text
  background:url('../../common/image/back.png')
  background-size: 100%
  border-radius:50%
  border:1px solid $color-text-ll
  &:before
    position:absolute
    top: 7px
    left:6px
